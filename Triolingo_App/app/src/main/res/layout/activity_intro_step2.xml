<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/introLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="24dp">

    <!-- Nút Back -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!-- Bubble + đuôi -->
    <LinearLayout
        android:id="@+id/bubbleContainer"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">

        <!-- Khung chat -->
        <TextView
            android:id="@+id/chatBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/chat_bubble_background"
            android:padding="16dp"
            android:textSize="16sp"
            android:elevation="4dp" />

        <!-- Mũi tên chat -->
        <ImageView
            android:id="@+id/chatTail"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/chat_tail_down" />
    </LinearLayout>

    <!-- Nhân vật -->
    <ImageView
        android:id="@+id/characterImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/anhconcu"
        android:layout_below="@id/bubbleContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Nút Tiếp tục -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="TIẾP TỤC"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/purple_main"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp" />
</RelativeLayout>
